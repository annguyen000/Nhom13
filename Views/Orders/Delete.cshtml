@model WebApplication1.Models.Order

@{
    ViewData["Title"] = "Xóa đơn hàng";
}

<div class="container-fluid">
    <h1>@ViewData["Title"]</h1>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Xác nhận xóa!</h4>
        <p>Bạn có chắc chắn muốn xóa đơn hàng này không? Hành động này không thể hoàn tác.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Mã đơn hàng</dt>
                <dd class="col-sm-8">@Model.Code</dd>

                <dt class="col-sm-4">Nhà cung cấp</dt>
                <dd class="col-sm-8">@Model.SupplierName</dd>

                <dt class="col-sm-4">Ngày đặt</dt>
                <dd class="col-sm-8">@Model.OrderDate.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Ngày giao dự kiến</dt>
                <dd class="col-sm-8">@(Model.ExpectedDeliveryDate?.ToString("dd/MM/yyyy") ?? "-")</dd>

                <dt class="col-sm-4">Ngày giao thực tế</dt>
                <dd class="col-sm-8">@(Model.ActualDeliveryDate?.ToString("dd/MM/yyyy") ?? "-")</dd>

                <dt class="col-sm-4">Trạng thái</dt>
                <dd class="col-sm-8">
                    <span class="badge badge-@(Model.Status switch {
                        "Chờ duyệt" => "warning",
                        "Đã duyệt" => "info",
                        "Đang giao" => "primary",
                        "Đã giao" => "success",
                        "Đã hủy" => "danger",
                        _ => "secondary"
                    })">@Model.Status</span>
                </dd>

                <dt class="col-sm-4">Ghi chú</dt>
                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Notes) ? "-" : Model.Notes)</dd>
            </dl>
        </div>
    </div>

    <h3 class="mt-4">Chi tiết đơn hàng</h3>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.OrderDetails)
                {
                    <tr>
                        <td>@detail.ProductName</td>
                        <td>@detail.Quantity</td>
                        <td>@detail.UnitPrice.ToString("N0") VNĐ</td>
                        <td>@detail.Amount.ToString("N0") VNĐ</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-right">Tổng cộng:</th>
                    <th>@Model.TotalAmount.ToString("N0") VNĐ</th>
                </tr>
            </tfoot>
        </table>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Xác nhận xóa
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </form>
</div> 